<Window x:Class="TPH.Tools.Regex.Tester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPH.Tools.Regex.Tester"
        mc:Ignorable="d"
        Title="Regex - Tester"
		Height="450"
		Width="800"
		WindowStartupLocation="CenterScreen">
	<Border BorderThickness="10">
		<StackPanel>
			<Label x:Name="lblSearchText">Text</Label>
			<TextBox x:Name="txtSearchText" Text="{Binding Path=SearchText}"></TextBox>
			<Label x:Name="lblRegex" Margin="0 10 0 0">Regex</Label>
			<TextBox x:Name="txtRegex" Text="{Binding Path=Regex}"></TextBox>
			<Label x:Name="Operations" Margin="0 10 0 0">Operations</Label>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"></ColumnDefinition>
					<ColumnDefinition Width="*"></ColumnDefinition>
				</Grid.ColumnDefinitions>

				<Button x:Name="btnMatch" Click="btnMatch_Click" Grid.Row="0" Grid.Column="0">Match</Button>
			</Grid>

			<CheckBox x:Name="chkIsMatch" Margin="0 10 0 0" IsChecked="{Binding Path=IsMatch, Mode=OneWay}" IsEnabled="False">Is Match</CheckBox>
		</StackPanel>
	</Border>
</Window>
